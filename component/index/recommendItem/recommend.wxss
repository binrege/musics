/* component/index/recommendItem/recommend.wxss */

@import "../../../app.wxss";
.wrap {
    width: 100%;
    padding: 20rpx;
    margin: 10rpx atuo;
    box-sizing: border-box;
}

.wrap-top {}

.more {
    background: #ccc;
    /* width: 200rpx; */
    padding: 5rpx 20rpx;
    border-radius: 30rpx;
    font-weight: 800;
    font-size: 32rpx;
    line-height: 60rpx;
}

.title {
    font-size: 32rpx;
}

.select {
    font-weight: 800;
}

.title-left {
    margin-right: 20rpx;
}

.wrap-bottom {
    width: 100%;
    margin: 10rpx auto;
}

.playNum {
    position: absolute;
    top: 0;
    right: 10rpx;
    font-size: 24rpx;
    color: rgb(94, 77, 77);
}

.playNum2 {
    position: absolute;
    bottom: 70rpx;
    left: 10rpx;
}

.playImg {
    width: 40rpx;
}

.img {
    width: 227rpx;
}

.imageItem {
    padding: 0 5rpx;
    margin: 10rpx 0;
    position: relative;
}

.name {
    display: -webkit-box;
    overflow: hidden;
    white-space: normal !important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 227rpx;
    font-size: 24rpx;
}